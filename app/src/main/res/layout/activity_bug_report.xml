<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"

android:background="@drawable/background"
tools:context=".BugReport">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/BugBackID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/back_btn"
        android:background="@drawable/ripple"
        android:onClick="BugReportBackID"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signuptitle2"
        android:text="Bug Report"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="20dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bugId"
        android:layout_below="@id/signuptitle2"
        android:background="#30ffffff"
        android:hint="Your Id "
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:inputType="numberDecimal"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"/>


    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bugText"
        android:layout_below="@id/bugId"
        android:background="@color/white"
        android:hint="Text here "
        android:gravity="top"
        android:textColorHint="@color/white"
        android:textColor="@color/meterial_ash"
        android:layout_marginTop="30dp"
        android:padding="15dp"

        android:textSize="20dp"
        android:minHeight="200dp"
        android:layout_margin="20dp"
        android:inputType="textCapSentences|textMultiLine"

        android:drawablePadding="20dp"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:textColor="#fff"
        android:id="@+id/Bug_submitID"
        android:textSize="25sp"
        android:layout_below="@+id/bugText"
        android:textStyle="bold"
        android:text="SUBMIT"/>





</RelativeLayout>



</ScrollView>