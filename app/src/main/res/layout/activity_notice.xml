<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"

tools:context=".Notice"
android:fitsSystemWindows="true"
tools:openDrawer="start"
android:id="@+id/drawerLayoutr_Notice"
    >
<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/navigatio_Notice"
    app:headerLayout="@layout/slide_menu_header"
    app:menu="@menu/slide_menu"
    android:layout_gravity="start">
</com.google.android.material.navigation.NavigationView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_Notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/meterial_deep_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Notice Board"
        app:titleTextColor="@color/white"
        app:subtitleTextAppearance="?android:textAppearanceLarge"
        />
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webViewNotice"
        />



</LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>