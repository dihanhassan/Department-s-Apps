<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"

android:background="@drawable/background"
    tools:context=".Modify_info">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/modifyInfoBackID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/back_btn"
        android:background="@drawable/ripple"
        android:onClick="mofifyBackID"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signuptitle2"
        android:text="Modify Information"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="20dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullName_info2"
        android:layout_below="@id/signuptitle2"
        android:background="#30ffffff"
        android:hint="Full name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_info2"
        android:layout_below="@id/fullName_info2"
        android:background="#30ffffff"
        android:hint="ID  [Ex. 19046]"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:inputType="numberDecimal"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/season_info2"
        android:layout_below="@+id/id_info2"
        android:hint="Sessions"

        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        tools:ignore="ExtraText">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filled_exposed2"
            android:inputType="none"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="#30ffffff"

            >

        </AutoCompleteTextView>

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_info2"
        android:layout_below="@id/season_info2"
        android:background="#30ffffff"
        android:hint="Mobile"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"

        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:inputType="numberDecimal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_info2"
        android:layout_below="@id/mobile_info2"
        android:background="#30ffffff"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/homeTown_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_info2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:hint="Home Town"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BloodGroupId2"
        android:layout_below="@id/homeTown_info2"
        android:hint="Blood Group"

        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        tools:ignore="ExtraText">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filled_exposed22"
            android:inputType="none"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="#30ffffff"

            >

        </AutoCompleteTextView>

    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service_info2"
        android:layout_below="@id/BloodGroupId2"
        android:background="#30ffffff"
        android:hint="Service ( Company name / Student )"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:inputType="text"/>



    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:textColor="#fff"
        android:id="@+id/submitID_info2"
        android:textSize="25sp"
        android:layout_below="@+id/service_info2"
        android:textStyle="bold"
        android:text="SUBMIT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/submitID_info2"
        tools:ignore="UnknownId" />



</RelativeLayout>



</ScrollView>