<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".StaffInfo"
android:fitsSystemWindows="true"
tools:openDrawer="start"
android:id="@+id/drawerLayoutStaffInfoID"
    >

<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/navigatioStaffInfoID"
    app:headerLayout="@layout/slide_menu_header"
    app:menu="@menu/slide_menu"
    android:layout_gravity="start">
</com.google.android.material.navigation.NavigationView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarStaffInfoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/meterial_deep_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Staff info"
        app:titleTextColor="@color/white"
        app:subtitleTextAppearance="?android:textAppearanceLarge"
        />

    <ImageButton
        android:id="@+id/staffInfo_back_btnID"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:src="@drawable/back_btn"
        android:background="@drawable/ripple"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="StaffInfoActivity"

        />


    <WebView
        android:id="@+id/webViewStaffID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />



</LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>